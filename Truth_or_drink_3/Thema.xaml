<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Truth_or_drink_3.Thema"
             Title="Thema"
             BackgroundColor="Black">

    <StackLayout
        Spacing="15"
        Padding="0"
        VerticalOptions="Start">


        <Image 
            Source="logo" 
            HorizontalOptions="Center"
            WidthRequest="200"
            HeightRequest="200" />
        <Button
            x:Name="SpicyButton"
            WidthRequest="200"
            HeightRequest="75"
            FontSize="30"
            FontAttributes="Bold"
            TextColor="Black"
            Text="Spicy"            
            Margin="0,40,0,0"
            HorizontalOptions="Center"
            BackgroundColor="#48FDF8" />
        <Button
            x:Name="DurfButton"
            WidthRequest="200"
            HeightRequest="75"
            FontSize="30"
            FontAttributes="Bold"
            TextColor="black"
            Text="Durf"            
            Margin="0,0,0,0"
            HorizontalOptions="Center"
            BackgroundColor="#48FDF8" />
        <Button
            x:Name="NormaalButton"
            Clicked="NormaalKnopClicked"
            WidthRequest="200"
            HeightRequest="75"
            FontSize="30"
            FontAttributes="Bold"
            TextColor="Black"
            Text="Normaal"            
            Margin="0,0,0,0"
            BackgroundColor="#48FDF8" />
        <Button
            x:Name="MixButton"
            WidthRequest="200"
            HeightRequest="75"
            FontSize="30"
            FontAttributes="Bold"
            TextColor="Black"
            Text="Mix"            
            Margin="0,0, 0,0"
            HorizontalOptions="Center"
            BackgroundColor="#48FDF8" />


    </StackLayout>
</ContentPage>
