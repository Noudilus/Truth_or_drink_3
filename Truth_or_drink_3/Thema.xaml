<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Truth_or_drink_3.Thema"
             Title="Thema"
             BackgroundColor="Black">

    <StackLayout
        Spacing="15"
        Padding="0"
        VerticalOptions="Start">

        <Button
            x:Name="DoenButton"
            Clicked="DoenKnopClicked"
            WidthRequest="200"
            HeightRequest="75"
            FontSize="30"
            FontAttributes="Bold"
            TextColor="Black"
            Text="Doen"            
            Margin="0,40,0,0"
            HorizontalOptions="Center"
            BackgroundColor="#48FDF8" />
        <Button
            x:Name="DurfButton"
            Clicked="DurfKnopClicked"
            WidthRequest="200"
            HeightRequest="75"
            FontSize="30"
            FontAttributes="Bold"
            TextColor="Black"
            Text="Durf"            
            Margin="0,0,0,0"
            HorizontalOptions="Center"
            BackgroundColor="#48FDF8" />
        <Button
            x:Name="WaarheidButton"
            Clicked="WaarheidKnopClicked"
            WidthRequest="200"
            HeightRequest="75"
            FontSize="30"
            FontAttributes="Bold"
            TextColor="Black"
            Text="Waarheid"            
            Margin="0,0,0,0"
            BackgroundColor="#48FDF8" />
        <Button
            x:Name="MixButton"
            Clicked="MixKnopClicked"
            WidthRequest="200"
            HeightRequest="75"
            FontSize="30"
            FontAttributes="Bold"
            TextColor="Black"
            Text="Mix"            
            Margin="0,0,0,0"
            HorizontalOptions="Center"
            BackgroundColor="#48FDF8" />
        <Button
            x:Name="CustomButton"
            WidthRequest="200"
            HeightRequest="75"
            FontSize="30"
            FontAttributes="Bold"
            TextColor="Black"
            Text="Custom"            
            Margin="0,90,0,0"
            HorizontalOptions="Center"
            BackgroundColor="#f700ff" />
        <Button
            x:Name="WouldYouRatherButton"
            Clicked="WouldYouRatherKnopClicked"
            WidthRequest="200"
            HeightRequest="75"
            FontSize="20"
            FontAttributes="Bold"
            TextColor="Black"
            Text="Would You Rather"            
            Margin="0,-180,0,0"
            HorizontalOptions="Center"
            BackgroundColor="#FFD700" />

    </StackLayout>
</ContentPage>
