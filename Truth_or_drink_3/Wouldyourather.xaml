<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Truth_or_drink_3.Wouldyourather"
             Title="Would You Rather"
             BackgroundColor="Black">

    <StackLayout
        Spacing="15"
        Padding="20"
        VerticalOptions="Center">

        <Label
            Text="Would You Rather"
            FontSize="36"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            TextColor="White" />

        <Label
            x:Name="QuestionLabel"
            Text="Click the button below to get a question!"
            FontSize="20"
            HorizontalOptions="Center"
            TextColor="White" />

        <Button
            x:Name="GetQuestionButton"
            Text="Get a Question"
            Clicked="GetQuestionButtonClicked"
            FontSize="20"
            BackgroundColor="#48FDF8"
            TextColor="Black"
            HorizontalOptions="Center" />

    </StackLayout>
</ContentPage>
