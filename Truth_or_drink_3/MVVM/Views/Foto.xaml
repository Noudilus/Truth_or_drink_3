<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Truth_or_drink_3.Foto"
             Title="Foto Opdracht">
    <StackLayout Padding="20" Spacing="45">
        
        <Label x:Name="OpdrachtLabel" 
               Text="Je opdracht verschijnt hier!"
               FontSize="Large"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <Button Text="Maak een foto"
                BackgroundColor="#32CD32"
                x:Name="FotoKnop"
                FontSize="20"
                FontAttributes="Bold"
                Clicked="FotoKnopClicked"
                HorizontalOptions="Center" />

        <Image x:Name="FotoWeergave"
               HeightRequest="200"
               WidthRequest="200"
               Aspect="AspectFill"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <Button Text="Nieuwe opdracht"
                BackgroundColor="#32CD32"
                FontAttributes="Bold"
                FontSize="20"
                x:Name="NieuweOpdrachtKnop"
                Clicked="NieuweOpdrachtClicked"
                HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
